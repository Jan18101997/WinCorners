<Window x:Class="WinCorners.HotKeyInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCorners"
        mc:Ignorable="d"
        Title="HotKeyInputWindow" Height="100" Width="300" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" LostFocus="Window_LostFocus" KeyDown="Window_KeyDown" Icon="/WinCorners;component/AppIcon.ico" ShowInTaskbar="False">
    <Border BorderThickness="2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
        <TextBlock x:Name="statusText" Text="Text" TextAlignment="Center" VerticalAlignment="Center" />
    </Border>
</Window>